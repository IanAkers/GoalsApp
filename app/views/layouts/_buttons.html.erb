<% if signed_in? %>
<form action="<%=session_url%>" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <%= form_auth_token %>
  <button>Sign Out</button>
</form>

<% else %>
<form action= "<%=new_session_url%>" method="get">
  <%= form_auth_token %>
  <button>Sign In</button>
</form>
<a href="<%= new_user_url %>">Sign Up</a>
<% end %>
